<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/fctb_AbsoluteLayout01" 
	android:layout_width="fill_parent" android:orientation="horizontal"
	android:layout_height="25dp" 
	android:background="@drawable/indicator_list_bg_change" android:weightSum="1"
	xmlns:android="http://schemas.android.com/apk/res/android" android:paddingLeft="10dp">
	<Button
                android:id="@+id/btn_del"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_gravity="center_vertical"
 			/>
    <TextView
			android:id="@+id/name"
			android:layout_height="wrap_content" android:layout_width="0dp" android:layout_weight="1"
			android:layout_marginLeft="10dp"
			android:layout_gravity="center_vertical"
			android:layout_x="2dp"
			android:layout_y="2dp"
			android:textSize="17dp"
			android:textColor="#333333" />

</LinearLayout>