<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
	<TabHost android:id="@+id/tabhost"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		
		<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent">
			
		<TabWidget android:id="@android:id/tabs"
			android:layout_width="fill_parent"
			android:layout_height="44px"
			android:layout_alignParentBottom="true"
		/>
		<FrameLayout android:id="@android:id/tabcontent"
			android:layout_above="@android:id/tabs"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:visibility="visible">
			<LinearLayout android:id="@+id/sc_gwanview"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent">
				<drfn.contents.find.MyBlankActivity android:id="@+id/gc_gwanview01"
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content" 
					android:layout_weight="1"
				/>
			</LinearLayout>
			<LinearLayout android:id="@+id/sc_sigview"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:visibility="invisible">
				<drfn.contents.find.MyBlankActivity android:id="@+id/gc_sigview01"
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content" 
					android:layout_weight="1"
				/>
			</LinearLayout>
			<LinearLayout android:id="@+id/sc_sigsetup"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:visibility="invisible">
				<drfn.contents.find.MyBlankActivity android:id="@+id/gc_sigsetup01"
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content" 
					android:layout_weight="1"
				/>
			</LinearLayout>
			<LinearLayout android:id="@+id/sc_sigallenvsetup"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:visibility="invisible">
				<drfn.contents.find.MyBlankActivity android:id="@+id/gc_sigallenvsetup01"
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content" 
					android:layout_weight="1"
				/>
			</LinearLayout>
			<TextView android:id="@+id/sc_tabexit"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:text=" "
				android:visibility="invisible" />
		
			</FrameLayout>
		</RelativeLayout>
	</TabHost>
</LinearLayout>
