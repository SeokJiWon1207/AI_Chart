<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="48dp"
    android:background="#ffffff"
    android:gravity="start|center"
    android:weightSum="1">

    <RelativeLayout
        android:id="@+id/rl_chk_jipyo"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:gravity="left|center_vertical">

        <CheckBox
            android:id="@+id/chk_jipyo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/radiobtn_change"
            android:button="@null" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1.0"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="none"
            android:gravity="left|center"
            android:singleLine="true"
            android:text="Item"
            android:textColor="#666666"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn_duplicate"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:padding="0dp" />

        <RelativeLayout
            android:id="@+id/rl_favorite"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="end|center">

            <CheckBox
                android:id="@+id/chk_favorite"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:button="@drawable/favorite_checkbox_change" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_config"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="18dp"
            android:gravity="end|center">

            <ImageView
                android:id="@+id/iv_config"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="right|center"
                android:layout_y="2dp"
                android:background="@drawable/more2" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>