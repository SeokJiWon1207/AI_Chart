<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="160dp"
	android:layout_height="182dp"
	android:orientation="vertical"
	android:padding="0dp"
	android:background="@drawable/shape_popup_alert_roundrect">

	<LinearLayout
		android:layout_width="fill_parent" android:background="@android:color/transparent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:padding="0dp">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="55dip"
			android:gravity="center"
			android:text="봉 개수 설정"
			android:textColor="#000000"
			android:textSize="18dp"
			android:textStyle="bold" />

		<ImageView
			android:layout_width="130dp"
			android:layout_height="1px"
			android:layout_marginLeft="15dp"
			android:layout_marginRight="15dp"
			android:background="#f0f0f0" />

		<EditText
			android:id="@+id/ed_viewnumset"
			android:layout_width="80dp"
			android:layout_height="45dp"
			android:layout_gravity="center"
			android:layout_marginTop="15dp"
			android:background="@drawable/edittext_change"
			android:cursorVisible="false"
			android:gravity="center"
			android:inputType="number"
			android:privateImeOptions="inputType=spamNumber;symbol=false;"
			android:selectAllOnFocus="true"
			android:textColor="#000000"
			android:layout_marginBottom="15dp"/>

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="48dp"
		android:background="@android:color/transparent"
		android:gravity="center">

		<Button
			android:id="@+id/btn_sendrequest"
			android:background="@drawable/btn_popup_chart_confirm"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:textSize="15dp"
			android:textStyle="bold"
			android:text="확인"
			android:textColor="#ffffff" />
	</LinearLayout>
</LinearLayout>
