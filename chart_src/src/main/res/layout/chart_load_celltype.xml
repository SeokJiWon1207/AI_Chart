<?xml version="1.0" encoding="utf-8"?>
<!-- 2012. 7. 24  차트불러오기 화면 레이아웃  -->
<LinearLayout android:id="@+id/fctb_LinearLayout01" android:layout_width="fill_parent" android:background="#ffffffff"
	android:layout_height="160dp" android:orientation="horizontal" android:weightSum="1"
	xmlns:android="http://schemas.android.com/apk/res/android">
	
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:orientation="horizontal"
		android:paddingLeft="18dp">

		<ImageView android:id="@+id/loadimg"
			android:layout_width="120dp"
			android:layout_height="120dp"
			android:layout_gravity="center_vertical"
			android:scaleType="fitXY"/>

	</LinearLayout>
	<LinearLayout
		android:layout_width="0dp"
		android:layout_height="120dp"
		android:layout_gravity="center_vertical"
		android:layout_weight="1"
		android:orientation="vertical"
		android:paddingLeft="12dp">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="40dp"
			android:orientation="horizontal">
			<TextView android:id="@+id/chartload_tv_name" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:gravity="center_vertical" android:text="리스트제목" android:textSize="15dp" android:textColor="#111111" android:elegantTextHeight="false" />
			<Button android:id="@+id/btn_edit" android:layout_width="24dp" android:layout_height="24dp" android:layout_gravity="top"
				android:background="@drawable/btn_saveload_del_change" android:layout_marginLeft="9dp" android:layout_marginRight="18dp"/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="30dp"
			android:orientation="horizontal">
			<TextView android:id="@+id/chartload_tv_date" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:gravity="center_vertical" android:text="0000.00.00" android:textSize="14dp" android:textColor="#999999" android:elegantTextHeight="false"/>
			<TextView android:id="@+id/chartload_tv_period" android:layout_width="wrap_content" android:layout_height="match_parent" android:gravity="center_vertical" android:text="120틱" android:textSize="14dp" android:textColor="#488be2" android:lines="1" android:layout_marginRight="18dp" android:elegantTextHeight="false"/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="20dp"
			android:orientation="horizontal">
			<TextView android:layout_width="wrap_content" android:layout_height="match_parent" android:text="지표" android:textSize="14dp" android:textColor="#999999" android:gravity="center_vertical|left" android:layout_marginRight="6dp" android:elegantTextHeight="false" />
			<TextView android:id="@+id/chartload_tv_indicator" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:gravity="center_vertical" android:text="지표지표지표지표" android:textSize="14dp" android:textColor="#111111" android:layout_marginRight="18dp" android:elegantTextHeight="false" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/ll_saved_jongmok"
			android:layout_width="match_parent"
			android:layout_height="30dp"
			android:orientation="horizontal"
			android:layout_marginTop="5dp">

			<ImageView android:layout_width="20dp" android:layout_height="20dp" android:layout_gravity="center_vertical" android:background="@drawable/checkbox_off_d" android:layout_marginRight="8dp"/>
			<TextView android:id="@+id/chartload_tv_jongmok" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_gravity="center_vertical" android:layout_weight="1" android:text="종목(종목코드)" android:textSize="14dp" android:textColor="#111111" android:layout_marginRight="18dp" android:elegantTextHeight="false" />

		</LinearLayout>

	</LinearLayout>
    
    <CheckBox android:layout_height="20dip" 
        android:layout_width="20dip" 
        android:layout_marginLeft="40dp"
        android:id="@+id/checkBox" 
        android:layout_gravity="center_vertical"
        android:button="@drawable/radiobtn_change"
        android:checked="false" 
        android:focusable="false"
		android:visibility="gone"/>
    

    
    <LinearLayout android:id="@+id/chartload_linear_btns" android:layout_width="wrap_content" android:weightSum="1"
				android:layout_height="match_parent" android:orientation="horizontal" android:gravity="center_vertical" android:visibility="gone">

        <Button android:id="@+id/chartload_btn_detail"  android:layout_marginLeft="10dip" android:layout_width="32dp" android:layout_height="32dp"
		    	android:background="@drawable/btn_saveload_info_change" android:layout_marginRight="40dp"/>
    </LinearLayout>
</LinearLayout>


