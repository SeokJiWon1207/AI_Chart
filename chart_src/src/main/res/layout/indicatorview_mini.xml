<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_shadow"
    android:clickable="true"
    android:orientation="vertical"
    android:weightSum="1" >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical"
        android:weightSum="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"

            android:layout_marginLeft="16dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/indicatormini_btn_showindicator"
                style="@style/mini_top_btn"
                android:layout_marginTop="14dp"
                android:text="차트전체설정" />

            <Button
                android:id="@+id/indicatormini_btn_initchart"
                style="@style/mini_top_btn"
                android:visibility="gone"
                android:text="초기화" />

            <View android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" />

            <Button
                android:id="@+id/indicatormini_btn_close"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/btn_close_mini_n"
                android:text="" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_mini_sub_tab"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:orientation="horizontal"
            android:padding="0dp">

            <Button
                android:id="@+id/btn_sub_tab1"
                style="@style/mini_top_btn"
                android:layout_width="40dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/edittext_change2"
                android:text="비교" />

            <Button
                android:id="@+id/btn_sub_tab2"
                style="@style/mini_top_btn"
                android:layout_width="72dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/edittext_change2"
                android:text="그리기종목" />

        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:orientation="vertical" >

        <!-- 2017. 8. 1 by hyh - 지표설정 UI 변경 >> -->
        <LinearLayout
            android:id="@+id/ll_jipyo_tab_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:clickable="true"
            android:orientation="vertical" />
        <!-- 2017. 8. 1 by hyh - 지표설정 UI 변경 << -->
    </LinearLayout>



</LinearLayout>
