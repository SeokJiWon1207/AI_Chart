<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	android:id="@+id/jipyolist_parentlinear"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:background="#00000000"
	android:paddingLeft="24dp"
	android:paddingRight="29dp"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<LinearLayout
		android:visibility="gone"
		android:id="@+id/subjipyo_title"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="left|top">
		<TextView
			style="@style/jipyolist_textview"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="16dp"
			android:text="보조지표"
			android:textColor="#5C6088"
			android:textSize="14dp" />
	</LinearLayout>
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:layout_marginTop="12dp"
			android:layout_marginBottom="12dp">
			<TextView
				android:id="@+id/jipyoname"
				style="@style/jipyolist_textview"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="지표명"
				android:textColor="#787878"
				android:textSize="14dp" />
		</LinearLayout>
		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:layout_marginTop="12dp"
			android:layout_marginBottom="12dp"
			android:gravity="left|center_vertical">
			<Button
				android:id="@+id/btn_move_jipyo_setting"
				android:layout_width="24dp"
				android:layout_height="24dp"
				android:layout_marginRight="6dp"
				android:gravity="left|center_vertical"
				android:background="@drawable/btn_chart_control_setting"/>
			<TextView
				style="@style/jipyolist_textview"
				android:id="@+id/valuename"
				android:lineSpacingExtra="5dip"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="left|center_vertical"
				android:textSize="14dp"
				android:textColor="#101010"
				android:text="변수"/>
		</LinearLayout>
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp">
			<Button
				android:visibility="invisible"
				android:id="@+id/btn_move_detail"
				android:layout_width="24dp"
				android:layout_height="24dp"
				android:layout_marginLeft="8dp"
				android:background="@drawable/btn_chart_edit_small_n"/>
		</LinearLayout>
	</LinearLayout>
	<View android:layout_width="match_parent" android:layout_height="1dp" android:background="#f0f0f0"/>
</LinearLayout>
