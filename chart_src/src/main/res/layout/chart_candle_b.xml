<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:background="#ffffff">
    
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:background="#ffffff">
	     <!-- 2012. 8. 27  캔들 추가설정창  -->
	     <ScrollView android:layout_width="fill_parent" android:layout_height="wrap_content" android:background="#ffffff" android:layout_below="@+id/candle_relative_top">
	         <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/candlesetting" android:orientation="vertical">
				 <TextView style="@style/detail_headline2" android:text="변수 설정" android:id="@+id/paramtv"/>

		        <LinearLayout style="@style/candlesetting_rowlinear">
		            <TextView style="@style/detail_candleset_title" android:text="양봉(상승)" android:layout_width="145dp"/>
		            <CheckBox style="@style/detail_candleset_checkbox" android:layout_marginRight="10dp" android:checked="true" android:id="@+id/candle_yangsang_check"/>
		            <TextView style="@style/detail_candleset_subtitle" android:text="채우기" android:id="@+id/candle_yangsang_label"/>
					<TextView style="@style/detail_lineset_items" android:id="@+id/candlecolor_yangsang" android:background="@drawable/shape_circle" android:layout_marginRight="18dp"></TextView>
		        </LinearLayout>
				 <ImageView android:layout_width="match_parent" android:layout_height="1dp" android:background="#eeeeee" />
		        <LinearLayout style="@style/candlesetting_rowlinear">
		            <TextView style="@style/detail_candleset_title" android:layout_width="145dp" android:text="양봉(하락)"/>

		            <CheckBox style="@style/detail_candleset_checkbox" android:layout_marginRight="10dp" android:checked="true" android:id="@+id/candle_yangha_check"/>
		            <TextView style="@style/detail_candleset_subtitle"  android:text="채우기" android:id="@+id/candle_yangha_label"/>
					<TextView style="@style/detail_lineset_items" android:id="@+id/candlecolor_yangha" android:background="@drawable/shape_circle" android:layout_marginRight="18dp"></TextView>
		        </LinearLayout>
				 <ImageView android:layout_width="match_parent" android:layout_height="1dp" android:background="#eeeeee" />
		        <LinearLayout style="@style/candlesetting_rowlinear">
		            <TextView style="@style/detail_candleset_title" android:layout_width="145dp" android:text="음봉(상승)"/>

		            <CheckBox style="@style/detail_candleset_checkbox" android:layout_marginRight="10dp" android:checked="true" android:id="@+id/candle_eumsang_check"/>
		            <TextView style="@style/detail_candleset_subtitle"  android:text="채우기" android:id="@+id/candle_eumsang_label"/>
					<TextView style="@style/detail_lineset_items" android:id="@+id/candlecolor_eumsang" android:background="@drawable/shape_circle" android:layout_marginRight="18dp"></TextView>
		        </LinearLayout>
				 <ImageView android:layout_width="match_parent" android:layout_height="1dp" android:background="#eeeeee" />
		        <LinearLayout style="@style/candlesetting_rowlinear">
		            <TextView style="@style/detail_candleset_title" android:layout_width="145dp" android:text="음봉(하락)"/>

		            <CheckBox style="@style/detail_candleset_checkbox" android:layout_marginRight="10dp" android:checked="true" android:id="@+id/candle_eumha_check"/>
		            <TextView style="@style/detail_candleset_subtitle"  android:text="채우기" android:id="@+id/candle_eumha_label"/>
					<TextView style="@style/detail_lineset_items" android:id="@+id/candlecolor_eumha" android:background="@drawable/shape_circle" android:layout_marginRight="18dp"></TextView>
		        </LinearLayout>
				 <ImageView android:layout_width="match_parent" android:layout_height="1dp" android:background="#eeeeee" />
		        <LinearLayout style="@style/candlesetting_rowlinear" android:layout_height="46dp" android:id="@+id/candle_baseprice_layout" android:visibility="gone">
		            <TextView style="@style/detail_lineset_title" android:text="상승/하락기준" android:layout_marginLeft="15dp" android:layout_width="150dp"/>
		        </LinearLayout>
		        	<LinearLayout style="@style/candlesetting_rowlinear" >
		            	<TextView style="@style/detail_candleset_title"  android:text="상승/하락기준:전봉대비" android:layout_width="wrap_content" android:layout_marginRight="5dip"/>
		        
		            <!-- <Spinner style="@style/candlesetting_spinner" android:id="@+id/candle_spinner_prevcandle"/> -->
	
		                <LinearLayout
		                    android:id="@+id/candle_button_baseprice"
		                    android:layout_width="74dp"
		                    android:layout_height="36dp"
		                    android:background="@drawable/btncombo_change"
							android:layout_marginRight="10dp"
		                    android:layout_gravity="center_vertical"
		                    android:orientation="horizontal">

							<TextView
								android:id="@+id/candle_button_baseprice_text"
								android:layout_width="26dp"
								android:layout_height="match_parent"
								android:layout_marginLeft="7dp"
								android:gravity="left|center_vertical"
								android:singleLine="true"
								android:text=""
								android:textColor="#000000"
								android:textSize="14dp" />
		
		                </LinearLayout>

		            	<TextView style="@style/detail_candleset_subtitle" android:text="상승/하락"/>
		            </LinearLayout>
				 <ImageView android:layout_width="match_parent" android:layout_height="1dp" android:background="#eeeeee" />
		        <LinearLayout style="@style/candlesetting_rowlinear" android:layout_height="46dp" android:visibility="gone">
		            <TextView style="@style/detail_lineset_title" android:textSize="16dp" android:text="보합(시가=종가) 색상" android:layout_width="150dp"/>
		        </LinearLayout>
		            <!-- <Spinner style="@style/candlesetting_spinner" android:id="@+id/candle_spinner_closevalue"/> -->
				<LinearLayout style="@style/candlesetting_rowlinear" >

					<TextView style="@style/detail_candleset_title"  android:text="보합(시가=종가) 색상" android:layout_width="wrap_content" android:layout_marginRight="5dip"/>
	                <LinearLayout
	                    android:id="@+id/candle_button_samecolor"
	                    android:layout_width="128dp"
	                    android:layout_height="36dp"
	                    android:background="@drawable/btncombo_change"
	                    android:layout_gravity="center_vertical"
	                    android:orientation="horizontal"
						android:layout_marginRight="18dp">
	
	                    <TextView
	                        android:id="@+id/candle_button_samecolor_text"
	                        android:layout_width="80dp"
	                        android:layout_height="match_parent"
	                        android:layout_marginLeft="10dp"
							android:gravity="left|center_vertical"
	                        android:singleLine="true"
	                        android:text=""
	                        android:textColor="#000000"
	                        android:textSize="14dp" />

	                </LinearLayout>
		        </LinearLayout>
				 <ImageView android:layout_width="match_parent" android:layout_height="1dp" android:background="#eeeeee" />
		        <LinearLayout style="@style/candlesetting_rowlinear">
		            <CheckBox style="@style/detail_checkbox" android:checked="false" android:id="@+id/candle_minmax_check" />
		            <TextView style="@style/detail_lineset_title" android:textColor="#111111" android:layout_marginLeft="6dp" android:layout_width="wrap_content" android:text="가격차트로 채우기" android:id="@+id/candle_minmax_label"/>
		        </LinearLayout>
				 <ImageView android:layout_width="match_parent" android:layout_height="1dp" android:background="#eeeeee" />
		        <LinearLayout style="@style/candlesetting_rowlinear">
		            <CheckBox style="@style/detail_checkbox" android:checked="false" android:id="@+id/candle_log_check" />
		            <TextView style="@style/detail_lineset_title" android:textColor="#111111" android:layout_marginLeft="6dp" android:layout_width="wrap_content" android:text="로그차트" android:id="@+id/candle_log_label"/>
		        </LinearLayout>
				 <ImageView android:layout_width="match_parent" android:layout_height="1dp" android:background="#eeeeee" />
				 <LinearLayout style="@style/candlesetting_rowlinear">
					 <CheckBox style="@style/detail_checkbox" android:checked="false" android:id="@+id/candle_inverse_check" />
					 <TextView style="@style/detail_lineset_title" android:textColor="#111111" android:layout_marginLeft="6dp" android:layout_width="wrap_content" android:text="거꾸로차트(Y축 반전)" android:id="@+id/candle_inverse_label"/>
				 </LinearLayout>
				 <ImageView android:layout_width="match_parent" android:layout_height="1dp" android:background="#eeeeee" />
				 <LinearLayout style="@style/candlesetting_rowlinear">
					 <CheckBox style="@style/detail_checkbox" android:checked="false" android:id="@+id/candle_gap_check" />
					 <TextView style="@style/detail_lineset_title" android:textColor="#111111" android:layout_marginLeft="6dp" android:layout_width="wrap_content" android:text="갭보정(분틱)" android:id="@+id/candle_gap_label"/>
				 </LinearLayout>
		    </LinearLayout>
	         
	     </ScrollView>
	     
	     <LinearLayout android:id="@+id/candle_relative_top" android:layout_width="fill_parent" android:layout_height="52dp" android:background="#ffffff">
	         <!-- 닫기  -->

	 	    <TextView android:layout_weight="1" android:layout_gravity="center_vertical" android:textColor="#111111" android:textSize="17dp" android:text="차트 설정" android:id="@+id/frameaTitle"
	 	        android:layout_height="wrap_content" android:layout_width="wrap_content" android:paddingLeft="12dp"></TextView>
	 	    <!--  초기화  -->
	        <Button android:textColor="#ffffff" android:layout_height="30dp"
				android:layout_width="78dp" android:layout_gravity="center_vertical" android:layout_marginRight="6dp"
				 android:background="@drawable/btn_refresh_change" android:id="@+id/frameaBtnInit"/>

			 <Button android:background="@drawable/btn_close_transparent"
				 android:id="@+id/frameaBtnBack" android:layout_height="34dp"
				 android:layout_width="34dp" android:layout_marginRight="14dp"
				 android:layout_gravity="center_vertical"/>
		 </LinearLayout>
	 </RelativeLayout>
</LinearLayout>