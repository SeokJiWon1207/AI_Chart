<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:id="@+id/fctb_AbsoluteLayout01" 
	android:layout_width="fill_parent" 
	android:layout_height="56dp"
	android:background="@drawable/list_bg"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:weightSum="1">

	<LinearLayout
		android:id="@+id/toolbar_layout"
		android:layout_width="366dp"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:weightSum="1">

		<CheckBox
			android:id="@+id/toolbarChk"
			android:layout_width="20dp"
			android:layout_height="20dp"
			android:layout_gravity="center_vertical"
			android:layout_marginLeft="20dp"
			android:button="@drawable/checkbox_change"
			android:checked="true"
			android:focusable="false"></CheckBox>

		<ImageView
			android:id="@+id/toolbarImg"
			android:layout_width="56dp"
			android:layout_height="56dp"
			android:layout_gravity="center_vertical"
			android:layout_marginLeft="10dp"
			android:background="@drawable/i_option_01"
			android:focusable="false"></ImageView>

		<View
			android:layout_width="21dp"
			android:layout_height="match_parent"
			android:background="#ffffff"
			android:visibility="gone"/>

		<TextView
			android:id="@+id/fctb_TextViewA01"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_marginLeft="6dp"
			android:layout_weight="1"
			android:text="지표이름"
			android:textColor="#000000"
			android:textSize="16dp"></TextView>
	</LinearLayout>
	<LinearLayout
		android:layout_width="52dp" android:layout_height="match_parent" android:orientation="vertical" android:paddingRight="20dp" android:gravity="center|right" >
		<ImageView android:id="@+id/fctb_ImageViewA01"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/dropdown_list_move" >
		</ImageView>
	</LinearLayout>
</LinearLayout>
