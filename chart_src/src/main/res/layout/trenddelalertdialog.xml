	<TextView android:id="@+id/alert_title" android:layout_width="match_parent"
		android:gravity="center" android:text="추세선 삭제"  android:textSize="18dp"
		android:layout_height="63dp" android:textColor="#000000" android:textStyle="bold" >
	</TextView>
<!--	</RelativeLayout>-->
	<ImageView android:layout_width="260dp" android:layout_height="1dp" android:layout_marginLeft="20dp" android:background="#f0f0f0" />
<!--	<ImageView-->
<!--		android:layout_width="130dp"-->
