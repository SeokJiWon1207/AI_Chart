<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/kfit_button" />
            <stroke android:width="1dp" android:color="@color/kfit_grey500" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape>
            <solid android:color="@color/kfit_dialog_and_sheet" />
            <stroke android:width="1dp" android:color="@color/kfit_grey300" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/kfit_dialog_and_sheet" />
            <stroke android:width="1dp" android:color="@color/kfit_grey200" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/kfit_dialog_and_sheet" />
            <stroke android:width="1dp" android:color="@color/kfit_grey300" />
            <corners android:radius="16dp" />
        </shape>
    </item>

</selector>
