<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:drawable="@drawable/kfits_btn_line_width4_image_dark" android:gravity="center" />
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="1dp" android:color="@color/kfit_primary20" />
                    <solid android:color="@color/kfit_list" />
                    <corners android:radius="10dp" />
                    <!--                android:radius="57dp" />-->
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="true">
        <layer-list>
            <item android:drawable="@drawable/kfits_btn_line_width4_image_dark" android:gravity="center" />
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="1dp" android:color="@color/kfit_high__emphasis" />
                    <corners android:radius="10dp" />
                    <!--                android:radius="57dp" />-->
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:drawable="@drawable/kfits_btn_line_width4_image_dark" android:gravity="center"  />
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="1dp" android:color="@color/kfit_primary20" />
                    <corners android:radius="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>