<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.kakaopay.feature.stock.common.presentation">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@android:drawable/sym_def_app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.MaterialComponents.DayNight">

        <activity
            android:name="com.kakaopay.app.stock.MtsChartLauncherActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.kakaopay.app.stock.trading_v2.MtsTradingActivity"
            android:theme="@style/kfit_NoActionBar"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />

        <activity
            android:name="com.kfitchart.screen.landscape.KfitChartLandscapeActivity"
            android:theme="@style/kfit_NoActionBar"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize|screenLayout" />
        <activity
            android:name="com.kfitchart.KfitConfigControllerActivity"
            android:screenOrientation="portrait"
            android:configChanges="uiMode"
            android:theme="@style/kfit_NoActionBar" />
    </application>

</manifest>