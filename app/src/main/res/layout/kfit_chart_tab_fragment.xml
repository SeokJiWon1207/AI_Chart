<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/kfits_grey0">

    <!-- 차트 UI -->
    <RelativeLayout
        android:id="@+id/chart_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/chart_menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 차트 설정 -->
    <include
        android:id="@+id/chart_menu"
        layout="@layout/kfit_chart_common_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chart_view" />

    <!-- 설정 툴팁 : 고정값 마진 계산 -->
    <include
        android:id="@+id/tooltip"
        layout="@layout/kfit_tooltip_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="-16dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/chart_menu"
        app:layout_constraintEnd_toEndOf="@+id/chart_menu"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>