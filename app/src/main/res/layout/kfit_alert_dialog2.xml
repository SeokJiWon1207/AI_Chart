<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="16dp"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    android:gravity="center"
    android:background="@drawable/dialog_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/kfit_alert_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/dialog_clear_chart_title"
        android:textSize="@dimen/kfit_alertdialog_title_textsize"
        android:textStyle="bold"
        android:textColor="@color/kfits_grey990"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/kfit_alert_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:text="@string/dialog_clear_chart_message"
        android:textSize="16dp"
        android:textColor="@color/kfits_fit_on_background_emphasis_high_type" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/kfit_cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:background="@drawable/dialog_button_background"
            android:text="취소"
            android:textSize="@dimen/kfit_alertdialog_button_textsize"
            android:textStyle="bold"
            android:stateListAnimator="@null"
            android:layout_marginRight="4dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/kfit_ok_btn"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:background="@drawable/dialog_button_background2"
            android:text="초기화"
            android:textSize="@dimen/kfit_alertdialog_button_textsize"
            android:textStyle="bold"
            android:textColor="@color/kfits_red"
            android:stateListAnimator="@null"
            android:layout_marginLeft="4dp" />
    </LinearLayout>
</LinearLayout>