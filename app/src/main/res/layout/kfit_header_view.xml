<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_header_title"
    android:layout_width="match_parent"
    android:layout_height="@dimen/kfit_header_layout_height"
    android:background="@color/kfits_grey0">

    <View
        android:id="@+id/kfit_left_empty_view"
        android:layout_width="20dp"
        android:layout_height="match_parent" />
    <!-- 2021.11.10 by JHY - TextView marginTop 5dp add -->
    <TextView
        android:id="@+id/header_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/kfit_header_title_height"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_toStartOf="@+id/header_close_btn"
        android:layout_toEndOf="@+id/kfit_left_empty_view"
        android:ellipsize="end"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/kfits_grey990"
        android:textFontWeight="600"
        android:textSize="@dimen/kfit_header_title_text_size" />

    <LinearLayout
        android:id="@+id/header_title_below"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/kfit_header_title2_height"
        android:layout_below="@id/header_title"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_toEndOf="@+id/kfit_left_empty_view">

        <TextView
            android:id="@+id/header_title2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/kfit_header_title2_height"
            android:layout_below="@id/header_title"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/header_close_btn"
            android:layout_toEndOf="@+id/kfit_left_empty_view"
            android:text=""
            android:textColor="@color/kfits_grey990"
            android:textSize="@dimen/kfit_header_title2_text_size" />

        <ImageView
            android:id="@+id/header_image"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/header_title4"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/kfit_header_title2_height"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text=""
            android:textColor="@color/kfits_grey990"
            android:textSize="@dimen/kfit_header_title2_text_size" />

        <TextView
            android:id="@+id/header_title3"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/kfit_header_title2_height"
            android:layout_below="@id/header_title"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text=""
            android:textColor="@color/kfit_grey999_black_alpha"
            android:textSize="@dimen/kfit_header_title3_text_size" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/header_close_btn"
        android:layout_width="36dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:gravity="center">

        <ImageButton
            android:layout_width="@dimen/kfit_header_close_btn_size"
            android:layout_height="@dimen/kfit_header_close_btn_size"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="14dp"
            android:background="@drawable/kfit_kp_core_ic_common_close"
            android:clickable="false" />
    </LinearLayout>
</RelativeLayout>


