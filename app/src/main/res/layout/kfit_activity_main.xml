            <!--                    android:text="설정" />-->

            <!--                <Button-->
            <!--                    android:id="@+id/btnTool"-->
            <!--                    android:layout_width="wrap_content"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:text="도구" />-->

            <!--                <Button-->
            <!--                    android:id="@+id/btnRealTest"-->
            <!--                    android:layout_width="wrap_content"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:text="RealTest Start" />-->
            <!--            </LinearLayout>-->
        </RelativeLayout>
    </LinearLayout>

