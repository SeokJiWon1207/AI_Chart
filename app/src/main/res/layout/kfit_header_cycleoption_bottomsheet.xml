<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="88dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="@drawable/border_dialog">

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="@dimen/kfit_bottom_header_close_btn"
            android:layout_height="@dimen/kfit_bottom_header_close_btn"
            android:layout_gravity="top|right"
            android:layout_marginTop="@dimen/kfit_bottom_header_close_margin"
            android:layout_marginRight="@dimen/kfit_bottom_header_close_margin"
            android:background="@drawable/kfit_kp_core_ic_common_cancel_small_th_20" />

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_gravity="left|bottom"
            android:layout_marginLeft="24dp"
            android:layout_marginBottom="20dp"
            android:gravity="left|bottom"
            android:text="분 선택"
            android:textColor="@color/kfits_grey990"
            android:textSize="@dimen/kfit_bottom_header_title_text_size"
            android:textStyle="bold" />

    </FrameLayout>
</LinearLayout>